    {
      "type": "CommentSubheading",
      "title": "Samaritans and the restoration of Jerusalem",
      "precomment": "",
      "refgroups": [],
      "comment": "",
      "children": [
        {
          "type": "CommentSubheadingTitle",
          "title": "Samaritans offer to rebuild the temple with the returning exiles but are rejected",
          "precomment": "",
          "refgroups": [
            {
              "type": "ReferenceGroup",
              "primaryrefs": [
                {
                  "type": "Reference",
                  "refclass": "A",
                  "comment": "The response of the Samaritans to this rejection, based on the Jews' desire to keep the faith pure, reflects the double-mindedness of their offer.",
                  "continuation": false,
                  "bcvreferences": [
                    "15004001-15004005"
                  ],
                  "parallels": []
                }
              ],
              "secondaryrefs": [],
              "seealsos": []
            }
          ]
        },
