    {
      "type": "CommentSubheading",
      "title": "The status of Melchizedek",
      "precomment": "",
      "refgroups": [],
      "comment": "",
      "children": [
        {
          "type": "CommentSubheadingTitle",
          "title": "David appropriates Melchizedek's office and authority for himself and his descendants",
          "precomment": "",
          "refgroups": [
            {
              "type": "ReferenceGroup",
              "primaryrefs": [
                {
                  "type": "Reference",
                  "refclass": "A",
                  "comment": "The word ``order'' here means ``in succession to'', meaning that Christ assumes the status and function of Melchizedek.",
                  "continuation": false,
                  "bcvreferences": [
                    "19110001-19110002",
                    "19110004"
                  ],
                  "parallels": []
                }
              ],
              "secondaryrefs": [],
              "seealsos": []
            }
          ]
        },
        {
