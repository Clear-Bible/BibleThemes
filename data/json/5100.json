        {
          "type": "ReferenceGroup",
          "primaryrefs": [
            {
              "type": "Reference",
              "refclass": "A",
              "comment": "Only the high priest could sacrifice for the sins of the nation in the inner sanctuary behind the curtain.",
              "continuation": false,
